{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticfabric.example/schema/executor/request-info/v1",
  "allOf": [
    { "$ref": "https://agenticfabric.example/schema/executor/base-props/v1" },
    {
      "type": "object",
      "properties": {
        "type": { "const": "request-info-executor" },
        "requestType": { "type": "string" },
        "timeout": { "type": "integer", "minimum": 0 },
        "retryPolicy": {
          "type": "object",
          "required": ["maxRetries"],
          "properties": {
            "maxRetries": { "type": "integer", "minimum": 0 },
            "backoffMs": { "type": "integer", "minimum": 0 },
            "exponentialBackoff": { "type": "boolean" }
          }
        },
        "responseHandler": { "type": "string" }
      },
      "required": ["type", "requestType"]
    }
  ]
}

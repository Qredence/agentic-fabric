{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticfabric.example/schema/workflow/v1",
  "type": "object",
  "required": ["id", "executors", "edges"],
  "properties": {
    "id": { "type": "string", "pattern": "^[A-Za-z0-9_-]+$" },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "acl": { "$ref": "#/definitions/acl" },
    "status": { "$ref": "#/definitions/status" },
    "metadata": { "type": "object" },
    "executors": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "https://agenticfabric.example/schema/executor/union/v1" }
    },
    "edges": {
      "type": "array",
      "items": { "$ref": "https://agenticfabric.example/schema/edge/v1" }
    },
    "edgeGroups": {
      "type": "array",
      "items": { "$ref": "https://agenticfabric.example/schema/edge/group/v1" }
    }
  },
  "definitions": {
    "acl": {
      "type": "object",
      "required": ["owner"],
      "properties": {
        "owner": { "type": "string" },
        "read": { "type": "array", "items": { "type": "string" } },
        "write": { "type": "array", "items": { "type": "string" } },
        "roles": { "type": "array", "items": { "type": "string" } }
      }
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "disabled", "deprecated"]
    }
  }
}
